@model IEnumerable<MiBotica.SolPedido.Entidades.Core.Usuario>

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Lista de Usuarios</h3>
        <div class="box-tools">
            <div class="input-group input-group-sm" style="width: 250px;">
                <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    <a href="@Url.Action("Create", "Usuario")" class="btn btn-primary">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="box-body table-responsive no-padding">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdPersona)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Especialidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                @*<th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.HoraI)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoraS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dias)
                </th>
                @*<th>
            @Html.DisplayNameFor(model => model.ClaveTexto)
        </th>*@
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdPersona)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Especialidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraI)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HoraS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dias)
                    </td>
                    @*<td>
                        @Html.DisplayNameFor(modelItem => model.ClaveTexto)
                    </td>*@
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdPersona }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdPersona }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdPersona })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
